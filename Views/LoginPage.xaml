<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="BookingApp.Views.LoginPage"
            Title="LoginPage"
            BackgroundColor="{StaticResource BackgroundColor}">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">

        <!-- SpaceFinder Logo -->
        <Image Source="main_logo.png" HeightRequest="100" WidthRequest="100" Margin="0,0,0,20" />
        <Label Text="Welcome Back!" 
               FontSize="32" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="Black" />

        <Entry x:Name="UsernameEntry"
            Placeholder="Username"
            Keyboard="Text"
            FontSize="18" 
            WidthRequest="250"
            TextColor="Black" 
            BackgroundColor="White" 
            Margin="0,20,0,10" 
            HorizontalOptions="Center"/>

        <Entry x:Name="PasswordEntry"
            Placeholder="Password"
            IsPassword="True"
            Keyboard="Text"
            FontSize="18" 
            WidthRequest="250"
            TextColor="Gray" 
            BackgroundColor="White" 
            Margin="0,0,0,20" 
            HorizontalOptions="Center"/>

        <Button Text="Log In"
            Clicked="OnLoginButtonClicked"
            HorizontalOptions="Center"
            BackgroundColor="#E0E0FF"
            TextColor="Black"
            WidthRequest="150"   
            Margin="0,0,0,10"    />

        <Button Text="Sign Up"
                Clicked="OnSignUpButtonClicked"
                HorizontalOptions="Center"
                BackgroundColor="#E0E0FF"
                TextColor="Black"
                WidthRequest="150"   
                Margin="0,0,0,10"  />

        <!-- Notification banner -->
        <Frame x:Name="NotificationFrame" 
                BackgroundColor="LightCoral" 
                IsVisible="False" 
                CornerRadius="10" 
                Padding="10" 
                Margin="10">
            <Grid>
                <Label x:Name="NotificationLabel" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    VerticalOptions="Center" 
                    HorizontalOptions="StartAndExpand"/>

                <Button Text="âœ•" 
                 BackgroundColor="Transparent" 
                 TextColor="White" 
                 VerticalOptions="Center" 
                 HorizontalOptions="End"
                 Clicked="CloseNotificationClicked"/>
            </Grid>
        </Frame>

    </StackLayout>
</ContentPage>